{% extends 'base.html.twig' %}

{% block title %}Gestion des Réservations{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h1 class="h3 mb-0">
                        <i class="fas fa-calendar-check me-2"></i>Gestion des Réservations
                    </h1>
                    <div>
                        <a href="{{ path('app_reservation_export_pdf') }}" class="btn btn-light btn-sm me-2">
                            <i class="fas fa-file-pdf me-1"></i> Exporter PDF
                        </a>
                        {# Afficher le bouton "Nouvelle Réservation" seulement si l'utilisateur n'est pas un client #}
                        {% if app.user and app.user.role != 'client' %}
                            <a href="{{ path('app_reservation_new') }}" class="btn btn-light btn-sm">
                                <i class="fas fa-plus me-1"></i> Nouvelle Réservation
                            </a>
                        {% endif %}
                    </div>
                </div>
                
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Nuits</th>
                                    <th>Heures</th>
                                    <th>Service</th>
                                    <th>Dates</th>
                                    <th>Actions</th>
                                    {# Nouvelle colonne pour le bouton d'assurance #}
                                    <th>Assurance</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for reservation in reservations %}
                                <tr>
                                    <td class="fw-bold">#{{ reservation.id }}</td>
                                    <td>{{ reservation.nbrnuit }}</td>
                                    <td>{{ reservation.nbrheure }}</td>
                                    <td>
                                        <span class="badge 
                                            {% if reservation.typeservice == 'Hôtel' %}bg-info
                                            {% elseif reservation.typeservice == 'Restaurant' %}bg-warning text-dark
                                            {% else %}bg-secondary
                                            {% endif %}">
                                            {{ reservation.typeservice }}
                                        </span>
                                    </td>
                                    
                                    <td>
                                        <span class="badge 
                                            {% if reservation.statut == 'confirmé' %}bg-success
                                            {% elseif reservation.statut == 'annulé' %}bg-danger
                                            {% else %}bg-warning text-dark
                                            {% endif %}">
                                            {{ reservation.statut }}
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex">
                                            <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" 
                                               class="btn btn-sm btn-outline-primary me-1"
                                               title="Détails">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            {# Afficher les boutons modifier/supprimer seulement si l'utilisateur n'est pas un client #}
                                            {% if app.user and app.user.role != 'client' %}
                                                <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" 
                                                   class="btn btn-sm btn-outline-warning me-1"
                                                   title="Modifier">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form method="post" action="{{ path('app_reservation_delete', {'id': reservation.id}) }}" 
                                                      class="delete-form"
                                                      onsubmit="return confirm('Supprimer cette réservation ?')">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </form>
                                            {% endif %}
                                        </div>
                                    </td>
                                    {# Nouvelle colonne avec le bouton "Faire assurance" #}
                                    <td>
                                        <a href="{{ path('app_assurance_new', {'reservation_id': reservation.id}) }}" 
                                           class="btn btn-sm btn-success"
                                           title="Créer une assurance pour cette réservation">
                                            <i class="fas fa-shield-alt me-1"></i> Faire assurance
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="8" class="text-center py-4">
                                        <div class="alert alert-info">
                                            <i class="fas fa-info-circle me-2"></i> Aucune réservation trouvée.
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}