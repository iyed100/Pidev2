{% extends 'base.html.twig' %}

{% block title %}Détails Réservation #{{ reservation.id }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .detail-card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            border: none;
        }
        .card-header-custom {
            background: linear-gradient(135deg, #3a7bd5 0%, #00d2ff 100%);
            color: white;
            border-radius: 10px 10px 0 0 !important;
        }
        .detail-table {
            margin-bottom: 0;
        }
        .detail-table td {
            padding: 1rem;
            border-top: 1px solid #f1f1f1;
        }
        .detail-table tr:first-child td {
            border-top: none;
        }
        .badge-detail {
            font-size: 0.9em;
            padding: 0.5em 0.8em;
        }
        .action-btns .btn {
            border-radius: 6px;
            padding: 0.5rem 1.25rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="card detail-card">
        <div class="card-header card-header-custom d-flex justify-content-between align-items-center">
            <h1 class="h4 mb-0">
                <i class="fas fa-calendar-check me-2"></i>
                Détails de la Réservation #{{ reservation.id }}
            </h1>
            <span class="badge bg-{% if reservation.statut == 'confirmé' %}success{% else %}warning{% endif %}">
                {{ reservation.statut }}
            </span>
        </div>
        
        <div class="card-body">
            <table class="table detail-table">
                <tbody>
                    <tr>
                        <th width="30%">ID</th>
                        <td>#{{ reservation.id }}</td>
                    </tr>
                    <tr>
                        <th>Nombre de nuits</th>
                        <td>{{ reservation.nbrnuit }}</td>
                    </tr>
                    <tr>
                        <th>Nombre d'heures</th>
                        <td>{{ reservation.nbrheure }}</td>
                    </tr>
                    <tr>
                        <th>Type de service</th>
                        <td>
                            <span class="badge badge-detail 
                                {% if reservation.typeservice == 'Hôtel' %}bg-info
                                {% elseif reservation.typeservice == 'Restaurant' %}bg-warning text-dark
                                {% else %}bg-secondary
                                {% endif %}">
                                {{ reservation.typeservice }}
                            </span>
                        </td>
                    </tr>
                   
                </tbody>
            </table>

            <div class="action-btns d-flex justify-content-between mt-4">
                <a href="{{ path('app_reservation_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                </a>
                <div>
                    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-warning me-2">
                        <i class="fas fa-edit me-1"></i> Modifier
                    </a>
                    {{ include('reservation/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Animation pour les boutons
        document.querySelectorAll('.btn').forEach(btn => {
            btn.addEventListener('mouseenter', () => {
                btn.style.transform = 'translateY(-2px)';
            });
            btn.addEventListener('mouseleave', () => {
                btn.style.transform = 'none';
            });
        });
    </script>
{% endblock %}