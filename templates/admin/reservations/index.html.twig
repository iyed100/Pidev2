{% extends 'admin/base_admin.html.twig' %}

{% block body %}
<div class="card-elegent card mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Liste des Réservations</h6>
    </div>
    <form method="get" class="mb-4 p-3 bg-light rounded">
    <div class="row g-3">
        <div class="col-md-4">
            <label for="type_service" class="form-label">Type de service</label>
            <select name="type_service" id="type_service" class="form-select">
                <option value="">Tous</option>
                <option value="Hôtel" {{ app.request.query.get('type_service') == 'Hôtel' ? 'selected' }}>Hôtel</option>
                <option value="Coworking" {{ app.request.query.get('type_service') == 'Coworking' ? 'selected' }}>Coworking</option>
                <option value="Restaurant" {{ app.request.query.get('type_service') == 'Restaurant' ? 'selected' }}>Restaurant</option>
            </select>
        </div>
        
        <div class="col-md-4">
            <label for="statut" class="form-label">Statut</label>
            <select name="statut" id="statut" class="form-select">
                <option value="">Tous</option>
                <option value="confirmé" {{ app.request.query.get('statut') == 'confirmé' ? 'selected' }}>Confirmé</option>
                <option value="en attente" {{ app.request.query.get('statut') == 'en attente' ? 'selected' }}>En attente</option>
                <option value="annulé" {{ app.request.query.get('statut') == 'annulé' ? 'selected' }}>Annulé</option>
            </select>
        </div>
        
        <div class="col-md-4 d-flex align-items-end">
            <button type="submit" class="btn btn-primary me-2">
                <i class="fas fa-filter"></i> Filtrer
            </button>
            <a href="{{ path('app_reservation_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-times"></i> Réinitialiser
            </a>
        </div>
    </div>
</form>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nuits</th>
                        <th>Heures</th>
                        <th>Service</th>
                        <th>Statut</th>
                        <th>Utilisateur</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for reservation in reservations %}
                    <tr>
                        <td>{{ reservation.id }}</td>
                        <td>{{ reservation.nbrnuit }}</td>
                        <td>{{ reservation.nbrheure }}</td>
                        <td>
                            <span class="badge 
                                {% if reservation.typeservice == 'Hôtel' %}bg-info
                                {% elseif reservation.typeservice == 'Restaurant' %}bg-warning text-dark
                                {% else %}bg-secondary
                                {% endif %}">
                                {{ reservation.typeservice }}
                            </span>
                        </td>
                        <td>
                            <span class="badge 
                                {% if reservation.statut == 'confirmé' %}bg-success
                                {% elseif reservation.statut == 'annulé' %}bg-danger
                                {% else %}bg-warning text-dark
                                {% endif %}">
                                {{ reservation.statut }}
                            </span>
                        </td>

                        <td>
                            {% if reservation.utilisateur %}
                                {{ reservation.utilisateur.nom }} {{ reservation.utilisateur.prenom }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td>
                            <div class="d-flex">
                                <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" 
                                   class="btn btn-sm btn-outline-primary me-1"
                                   title="Détails">
                                    <i class="fas fa-eye"></i>
                                </a>
                               
                                <form method="post" action="{{ path('app_reservation_delete', {'id': reservation.id}) }}" 
                                      class="delete-form"
                                      onsubmit="return confirm('Supprimer cette réservation ?')">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                                
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">Aucune réservation trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        <div class="navigation">
    <ul class="pagination">
        <li class="page-item {{ (reservations.getCurrentPageNumber() == 1) ? 'disabled' : '' }}">
            <a class="page-link" href="{{ (reservations.getCurrentPageNumber() > 1) ? '?page=' ~ (reservations.getCurrentPageNumber() - 1) : '#' }}">&laquo; Previous</a>
        </li>
        
        {% for page in 1..reservations.getPageCount() %}
            <li class="page-item {{ (page == reservations.getCurrentPageNumber()) ? 'active' : '' }}">
                <a class="page-link" href="?page={{ page }}">{{ page }}</a>
            </li>
        {% endfor %}
        
        <li class="page-item {{ (reservations.getCurrentPageNumber() == reservations.getPageCount()) ? 'disabled' : '' }}">
            <a class="page-link" href="{{ (reservations.getCurrentPageNumber() < reservations.getPageCount()) ? '?page=' ~ (reservations.getCurrentPageNumber() + 1) : '#' }}">Next &raquo;</a>
        </li>
    </ul>
</div>
    </div>
</div>



<a href="{{ path('app_reservation_export_pdf') }}" class="btn btn-secondary ms-2">
    <i class="fas fa-file-pdf me-1"></i> Exporter en PDF
</a>
{% endblock %}