{% extends 'admin/base_admin.html.twig' %}

{% block body %}
<div class="card-elegent card mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Liste des Réservations</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nuits</th>
                        <th>Heures</th>
                        <th>Service</th>
                        <th>Statut</th>
                        <th>Utilisateur</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for reservation in reservations %}
                    <tr>
                        <td>{{ reservation.id }}</td>
                        <td>{{ reservation.nbrnuit }}</td>
                        <td>{{ reservation.nbrheure }}</td>
                        <td>
                            <span class="badge 
                                {% if reservation.typeservice == 'Hôtel' %}bg-info
                                {% elseif reservation.typeservice == 'Restaurant' %}bg-warning text-dark
                                {% else %}bg-secondary
                                {% endif %}">
                                {{ reservation.typeservice }}
                            </span>
                        </td>
                        <td>
                            <span class="badge 
                                {% if reservation.statut == 'confirmé' %}bg-success
                                {% elseif reservation.statut == 'annulé' %}bg-danger
                                {% else %}bg-warning text-dark
                                {% endif %}">
                                {{ reservation.statut }}
                            </span>
                        </td>

                        <td>
                            {% if reservation.utilisateur %}
                                {{ reservation.utilisateur.nom }} {{ reservation.utilisateur.prenom }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td>
                            <div class="d-flex">
                                <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" 
                                   class="btn btn-sm btn-outline-primary me-1"
                                   title="Détails">
                                    <i class="fas fa-eye"></i>
                                </a>
                               
                                <form method="post" action="{{ path('app_reservation_delete', {'id': reservation.id}) }}" 
                                      class="delete-form"
                                      onsubmit="return confirm('Supprimer cette réservation ?')">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                                
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">Aucune réservation trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>



<a href="{{ path('app_reservation_export_pdf') }}" class="btn btn-secondary ms-2">
    <i class="fas fa-file-pdf me-1"></i> Exporter en PDF
</a>
{% endblock %}