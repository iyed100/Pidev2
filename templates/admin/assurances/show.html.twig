{% extends 'admin/base_admin.html.twig' %}

{% block title %}Admin - Assurance #{{ assurance.id }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-file-contract text-primary"></i> Détails Assurance #{{ assurance.id }}
        </h1>
        <a href="{{ path('app_assurance_index') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Retour à la liste
        </a>
    </div>

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Informations de l'assurance</h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in">
                            <a class="dropdown-item" href="{{ path('app_assurance_edit', {'id': assurance.id}) }}">
                                <i class="fas fa-edit fa-sm fa-fw mr-2 text-gray-400"></i>
                                Modifier
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#" data-toggle="modal" data-target="#deleteModal">
                                <i class="fas fa-trash-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                Supprimer
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Left Column -->
                        <div class="col-md-6">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <tr>
                                        <th class="bg-light">ID</th>
                                        <td>{{ assurance.id }}</td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">Statut</th>
                                        <td>
                                            <span  badge-{% if assurance.statut == 'Actif' %}success{% elseif assurance.statut == 'Expiré' %}danger{% else %}warning{% endif %}">
                                                {{ assurance.statut }}
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">Type</th>
                                        <td>
                                            <span  badge-{% if assurance.type == 'Auto' %}danger{% elseif assurance.type == 'Santé' %}success{% else %}info{% endif %}">
                                                {{ assurance.type }}
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">Montant</th>
                                        <td>{{ assurance.montant }} €</td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Right Column -->
                        <div class="col-md-6">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <tr>
                                        <th class="bg-light">Date souscription</th>
                                        <td>{{ assurance.dateSouscription|date('d/m/Y') }}</td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">Date expiration</th>
                                        <td class="{% if assurance.dateExpiration < date() %}text-danger font-weight-bold{% endif %}">
                                            {{ assurance.dateExpiration|date('d/m/Y') }}
                                            {% if assurance.dateExpiration < date() %}
                                                <span class="badge badge-danger ml-2">Expiré</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">Client</th>
                                        <td>
                                            {% if assurance.reservation and assurance.reservation.utilisateur %}
                                                {{ assurance.reservation.utilisateur.nom }} {{ assurance.reservation.utilisateur.prenom }}
                                                <br>
                                                <small class="text-muted">{{ assurance.reservation.utilisateur.email }}</small>
                                            {% else %}
                                                -
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="bg-light">Réservation associée</th>
                                        <td>
                                            {% if assurance.reservation %}
                                                <a href="{{ path('app_reservation_show', {'id': assurance.reservation.id}) }}">
                                                    #{{ assurance.reservation.id }}
                                                </a>
                                            {% else %}
                                                -
                                            {% endif %}
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Conditions -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                Conditions
                                            </div>
                                            <div class="mb-0 text-gray-800">
                                                {{ assurance.conditions|nl2br }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal-->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmer la suppression</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                Êtes-vous sûr de vouloir supprimer cette assurance?
                <div class="alert alert-warning mt-3">
                    <i class="fas fa-exclamation-triangle"></i> Cette action est irréversible!
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Annuler</button>
                <form method="post" action="{{ path('app_assurance_delete', {'id': assurance.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ assurance.id) }}">
                    <button class="btn btn-danger" type="submit">
                        <i class="fas fa-trash-alt"></i> Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Scripts spécifiques à la page admin
    </script>
{% endblock %}