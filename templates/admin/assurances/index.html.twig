{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const searchInput = document.getElementById('assuranceSearchInput');
            const table = document.getElementById('dataTable');
            const tbody = table.querySelector('tbody');

            searchInput.addEventListener('input', function () {
                const value = this.value.trim().toLowerCase();
                const rows = Array.from(tbody.querySelectorAll('tr')).filter(r => !r.classList.contains('no-results-message'));
                let anyVisible = false;

                // Supprimer ancien message "aucun résultat"
                const existingMessage = tbody.querySelector('.no-results-message');
                if (existingMessage) existingMessage.remove();

                rows.forEach(row => {
                    const cells = row.querySelectorAll('td');
                    const type = cells[1]?.textContent.toLowerCase() || '';
                    const montant = cells[2]?.textContent.toLowerCase() || '';
                    const statut = cells[4]?.textContent.toLowerCase() || '';
                    const client = cells[5]?.textContent.toLowerCase() || '';

                    const match =
                        type.includes(value) ||
                        montant.includes(value) ||
                        statut.includes(value) ||
                        client.includes(value);

                    row.style.display = match || value === '' ? '' : 'none';

                    if (match) anyVisible = true;
                });

                // Si aucun résultat trouvé
                if (!anyVisible && value !== '') {
                    const tr = document.createElement('tr');
                    tr.className = 'no-results-message';
                    tr.innerHTML = `
                        <td colspan="7" class="text-center py-4">
                            <div class="alert alert-warning mb-0">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                Aucune assurance ne correspond à "${value}"
                            </div>
                        </td>
                    `;
                    tbody.appendChild(tr);
                }
            });

            // GESTION SUPPRESSION
            document.querySelectorAll('.delete-form').forEach(form => {
                form.addEventListener('submit', function (e) {
                    if (!confirm('Êtes-vous sûr de vouloir supprimer cette assurance ?')) {
                        e.preventDefault();
                    }
                });
            });

            // SCROLL NAVBAR
            window.addEventListener('scroll', function () {
                const navbar = document.querySelector('.navbar');
                if (navbar) {
                    navbar.classList.toggle('scrolled', window.scrollY > 100);
                }
            });
        });
    </script>
