{% extends 'base.html.twig' %}

{% block title %}New Hotel{% endblock %}

{% block body %}
    <div class="section-header mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_hotel_index') }}">Hotels</a></li>
                <li class="breadcrumb-item active" aria-current="page">New Hotel</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card section-card">
                <div class="card-body">
                    <h1 class="h2 mb-4">Create New Hotel</h1>

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.nom) }}
                                    {{ form_widget(form.nom) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.nom) }}
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.nombreEtoiles) }}
                                    {{ form_widget(form.nombreEtoiles) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.nombreEtoiles) }}
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    {{ form_label(form.adresse) }}
                                    {{ form_widget(form.adresse) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.adresse) }}
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.prixParNuit) }}
                                    {{ form_widget(form.prixParNuit) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.prixParNuit) }}
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.imageFile) }}
                                    {{ form_widget(form.imageFile) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.imageFile) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary-gradient btn-action">
                                <i class="bi bi-plus-circle"></i> Create Hotel
                            </button>
                            <a href="{{ path('app_hotel_index') }}" class="btn btn-light btn-action">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card section-card">
                <div class="card-body">
                    <h5 class="card-title mb-4">Quick Actions</h5>
                    <div class="d-grid">
                        <a href="{{ path('app_hotel_index') }}" class="btn btn-light btn-action">
                            <i class="bi bi-arrow-left"></i> Back to Hotels
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
{% endblock %} 