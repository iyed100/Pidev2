{% extends 'base.html.twig' %}

{% block title %}Hotels{% endblock %}

{% block body %}
    <div class="section-header">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="bi bi-building"></i> Hotels & Accommodations</h1>
            <a href="{{ path('app_hotel_new') }}" class="btn btn-primary-gradient btn-custom">
                <i class="bi bi-plus-circle"></i> New Hotel
            </a>
        </div>

        <div class="card section-card">
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="search" class="form-label">Search</label>
                            <input type="text" name="search" id="search" class="form-control" placeholder="Search by name or address" value="{{ searchTerm }}">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="minStars" class="form-label">Minimum Stars</label>
                            <select name="minStars" id="minStars" class="form-select">
                                <option value="">All</option>
                                {% for i in 1..5 %}
                                    <option value="{{ i }}" {% if minStars == i %}selected{% endif %}>{{ i }}+ Stars</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="maxPrice" class="form-label">Maximum Price per Night</label>
                            <input type="number" name="maxPrice" id="maxPrice" class="form-control" placeholder="Max price" value="{{ maxPrice }}" min="0" step="0.01">
                        </div>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary-gradient btn-custom">
                            <i class="bi bi-search"></i> Search
                        </button>
                        {% if searchTerm or minStars or maxPrice %}
                            <a href="{{ path('app_hotel_index') }}" class="btn btn-secondary-gradient btn-custom">
                                <i class="bi bi-x-circle"></i> Clear Filters
                            </a>
                        {% endif %}
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="row">
        {% for hotel in hotels %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card section-card h-100">
                    <div class="position-relative">
                        {% if hotel.image %}
                            <img src="{{ asset('uploads/hotels/' ~ hotel.image) }}" class="card-img-top" alt="{{ hotel.nom }}" style="height: 200px; object-fit: cover;">
                        {% else %}
                            <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 200px;">
                                <i class="bi bi-building" style="font-size: 4rem; color: #ccc;"></i>
                            </div>
                        {% endif %}
                        <div class="position-absolute top-0 end-0 p-2">
                            <span class="badge bg-light text-dark">
                                {% for i in 1..hotel.nombreEtoiles %}
                                    <i class="bi bi-star-fill text-warning"></i>
                                {% endfor %}
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{ hotel.nom }}</h5>
                        <p class="card-text">
                            <i class="bi bi-geo-alt"></i> {{ hotel.adresse }}
                        </p>
                        <div class="mb-3">
                            <p class="mb-1">
                                <i class="bi bi-currency-euro"></i> 
                                <strong>{{ hotel.prixParNuit|number_format(2, '.', ',') }} â‚¬</strong> per night
                            </p>
                        </div>
                        <div class="d-flex gap-2">
                            <a href="{{ path('app_hotel_show', {'id': hotel.id}) }}" class="btn btn-primary-gradient btn-sm btn-action flex-grow-1">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a href="{{ path('app_hotel_edit', {'id': hotel.id}) }}" class="btn btn-secondary-gradient btn-sm btn-action">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <form method="post" action="{{ path('app_hotel_delete', {'id': hotel.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this hotel?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ hotel.id) }}">
                                <button class="btn btn-danger-gradient btn-sm btn-action">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info section-card">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <span>No hotels found. {% if searchTerm or minStars or maxPrice %}Try adjusting your search criteria.{% else %}Add your first hotel to get started!{% endif %}</span>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %} 