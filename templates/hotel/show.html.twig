{% extends 'base.html.twig' %}

{% block title %}{{ hotel.nom }} - Hotel Details{% endblock %}

{% block body %}
    <div class="section-header mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_hotel_index') }}">Hotels</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ hotel.nom }}</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card section-card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="h2 mb-0">{{ hotel.nom }}</h1>
                        <span class="badge bg-light text-dark p-2">
                            {% for i in 1..hotel.nombreEtoiles %}
                                <i class="bi bi-star-fill text-warning"></i>
                            {% endfor %}
                        </span>
                    </div>

                    {% if hotel.image %}
                        <div class="mb-4">
                            <img src="{{ asset('uploads/hotels/' ~ hotel.image) }}" class="img-fluid rounded" alt="{{ hotel.nom }}" style="width: 100%; height: 300px; object-fit: cover;">
                        </div>
                    {% endif %}

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-geo-alt-fill text-primary me-2"></i>
                                <h5 class="mb-0">Location</h5>
                            </div>
                            <p>{{ hotel.adresse }}</p>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-currency-euro text-success me-2"></i>
                                <h5 class="mb-0">Price per Night</h5>
                            </div>
                            <p class="h4">{{ hotel.prixParNuit|number_format(2, '.', ',') }} â‚¬</p>
                        </div>
                    </div>
                </div>
            </div>

            {% if hotel.coworkingSpaces|length > 0 %}
                <div class="card section-card mb-4">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-4">
                            <i class="bi bi-briefcase-fill text-primary me-2"></i>
                            <h2 class="h4 mb-0">Associated Coworking Spaces</h2>
                        </div>
                        <div class="row g-3">
                            {% for space in hotel.coworkingSpaces %}
                                <div class="col-md-6">
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ space.nom }}</h5>
                                            <a href="{{ path('app_coworking_space_show', {'id': space.id}) }}" class="btn btn-primary-gradient btn-sm btn-action mt-2">
                                                <i class="bi bi-eye"></i> View Details
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="col-lg-4">
            <div class="card section-card">
                <div class="card-body">
                    <h5 class="card-title mb-4">Actions</h5>
                    <div class="d-grid gap-3">
                        <a href="{{ path('app_hotel_edit', {'id': hotel.id}) }}" class="btn btn-secondary-gradient btn-action">
                            <i class="bi bi-pencil"></i> Edit Hotel
                        </a>
                        <form method="post" action="{{ path('app_hotel_delete', {'id': hotel.id}) }}" onsubmit="return confirm('Are you sure you want to delete this hotel? This action cannot be undone.');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ hotel.id) }}">
                            <button class="btn btn-danger-gradient btn-action w-100">
                                <i class="bi bi-trash"></i> Delete Hotel
                            </button>
                        </form>
                        <a href="{{ path('app_hotel_index') }}" class="btn btn-light btn-action">
                            <i class="bi bi-arrow-left"></i> Back to Hotels
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 