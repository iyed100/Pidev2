{% extends 'base.html.twig' %}

{% block title %}Modifier l'Assurance #{{ assurance.id }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .form-card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
            border: 1px solid #eee;
        }
        .form-header {
            background: #f8f9fa;
            border-bottom: 1px solid #eee;
            padding: 1.25rem;
            border-radius: 10px 10px 0 0;
        }
        .btn-actions {
            border-top: 1px solid #eee;
            padding-top: 1.5rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="form-card">
                <div class="form-header">
                    <h1 class="h4 mb-0">
                        <i class="fas fa-edit text-primary me-2"></i>
                        Modifier l'Assurance #{{ assurance.id }}
                    </h1>
                </div>
                
                <div class="p-4">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        
                        <div class="btn-actions d-flex justify-content-between">
                            <a href="{{ path('app_assurance_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Retour
                            </a>
                            <div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-1"></i> Enregistrer
                                </button>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}