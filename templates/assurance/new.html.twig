{% extends 'base.html.twig' %}

{% block title %}Nouvelle Assurance{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="h3 mb-0">
                            <i class="fas fa-plus-circle me-2"></i>Nouvelle Assurance
                        </h1>
                        <a href="{{ path('app_assurance_index') }}" class="btn btn-sm btn-light">
                            <i class="fas fa-arrow-left me-1"></i> Retour
                        </a>
                    </div>
                </div>
                
                <div class="card-body">
                    {{ form_start(form) }}
                        {% if app.request.query.get('reservation_id') %}
                            {# Si un ID de réservation est passé dans l'URL, on le pré-remplit #}
                            <input type="hidden" name="{{ form.reservation.vars.full_name }}" 
                                   value="{{ app.request.query.get('reservation_id') }}">
                        {% endif %}
                        {{ form_rest(form) }}
                        <button type="submit" class="btn btn-primary mt-3">
                            <i class="fas fa-save me-1"></i> Enregistrer
                        </button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}