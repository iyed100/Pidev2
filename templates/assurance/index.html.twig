{% extends 'base.html.twig' %}

{% block title %}Gestion des Assurances{% endblock %}

{% block body %}
<header class="hero-section">
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="{{ asset('images/logo.png') }}" alt="Logo" width="50" height="50">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                     <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_acceuil') }}">
                            <i class="fas fa-hotel me-1"></i> home
                        </a>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="#">Hébergement</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Espace de coworking</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Événements</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Avis et réclamation</a></li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_reservation_index') }}">
                            <i class="fas fa-calendar-check me-1"></i> Mes Réservations
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_hotel_index') }}">
                            <i class="fas fa-hotel me-1"></i> Hotels
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_assurance_index') }}">
                            <i class="fas fa-shield-alt me-1"></i> Mes Assurances
                        </a>
                    </li>
                </ul>

                
            </div>
        </div>
    </nav>
</header>
<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h1 class="h3 mb-0">
                        <i class="fas fa-shield-alt me-2"></i>Gestion des Assurances
                    </h1>
                    {# Afficher le bouton "Nouvelle Assurance" seulement si l'utilisateur n'est pas un client #}
                    {% if app.user and app.user.role != 'client' %}
                        <a href="{{ path('app_assurance_new') }}" class="btn btn-light btn-sm">
                            <i class="fas fa-plus me-1"></i> Nouvelle Assurance
                        </a>
                    {% endif %}
                </div>
                
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Type</th>
                                    <th>Montant</th>
                                    <th>Dates</th>
                                    <th>Statut</th>
                                    {% if app.user and app.user.role != 'client' %}
                                        <th>Actions</th>
                                    {% endif %}
                                </tr>
                            </thead>
                            <tbody>
                            {% for assurance in assurances %}
                                <tr>
                                    <td class="fw-bold">#{{ assurance.id }}</td>
                                    <td>
                                        <span class="badge 
                                            {% if assurance.type == 'Auto' %}bg-danger
                                            {% elseif assurance.type == 'Santé' %}bg-success
                                            {% else %}bg-secondary
                                            {% endif %}">
                                            {{ assurance.type }}
                                        </span>
                                    </td>
                                    <td>{{ assurance.montant }} €</td>
                                    <td>
                                        <small class="d-block">
                                            <strong>Souscr.:</strong> {{ assurance.dateSouscription|date('d/m/Y') }}
                                        </small>
                                        <small class="d-block">
                                            <strong>Expir.:</strong> 
                                            <span class="{% if assurance.dateExpiration < date() %}text-danger{% endif %}">
                                                {{ assurance.dateExpiration|date('d/m/Y') }}
                                            </span>
                                        </small>
                                    </td>
                                    <td>
                                        <span class="badge 
                                            {% if assurance.statut == 'Actif' %}bg-success
                                            {% elseif assurance.statut == 'Expiré' %}bg-danger
                                            {% else %}bg-secondary
                                            {% endif %}">
                                            {{ assurance.statut }}
                                        </span>
                                    </td>
                                    {# Afficher les actions seulement si l'utilisateur n'est pas un client #}
                                    {% if app.user and app.user.role != 'client' %}
                                        <td>
                                            <div class="d-flex">
                                                <a href="{{ path('app_assurance_show', {'id': assurance.id}) }}" 
                                                   class="btn btn-sm btn-outline-primary me-1"
                                                   title="Détails">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="{{ path('app_assurance_edit', {'id': assurance.id}) }}" 
                                                   class="btn btn-sm btn-outline-warning me-1"
                                                   title="Modifier">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form method="post" action="{{ path('app_assurance_delete', {'id': assurance.id}) }}" 
                                                      class="delete-form"
                                                      onsubmit="return confirm('Supprimer cette assurance ?')">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ assurance.id) }}">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    {% endif %}
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="{% if app.user and app.user.role != 'client' %}6{% else %}5{% endif %}" class="text-center py-4">
                                        <div class="alert alert-info">
                                            <i class="fas fa-info-circle me-2"></i> Aucune assurance trouvée.
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Carrousel des destinations
        document.addEventListener('DOMContentLoaded', function() {
            const track = document.querySelector('.destinations-track');
            const prevBtn = document.querySelector('.prev-dest');
            const nextBtn = document.querySelector('.next-dest');
            const cards = document.querySelectorAll('.destination-card');
            
            if (cards.length > 0) {
                const cardStyle = window.getComputedStyle(cards[0]);
                const cardMarginRight = parseFloat(cardStyle.marginRight);
                const cardWidth = cards[0].offsetWidth + cardMarginRight;
                const visibleCards = Math.floor(document.querySelector('.destinations-carousel').offsetWidth / cardWidth);
                let currentPosition = 0;
                const maxPosition = -(cards.length - visibleCards) * cardWidth;

                nextBtn.addEventListener('click', () => {
                    currentPosition = Math.max(currentPosition - (visibleCards * cardWidth), maxPosition);
                    track.style.transform = `translateX(${currentPosition}px)`;
                    updateArrows();
                });

                prevBtn.addEventListener('click', () => {
                    currentPosition = Math.min(currentPosition + (visibleCards * cardWidth), 0);
                    track.style.transform = `translateX(${currentPosition}px)`;
                    updateArrows();
                });

                function updateArrows() {
                    prevBtn.style.visibility = currentPosition === 0 ? 'hidden' : 'visible';
                    nextBtn.style.visibility = currentPosition <= maxPosition ? 'hidden' : 'visible';
                }

                // Initial setup
                updateArrows();
                
                // Handle window resize
                window.addEventListener('resize', function() {
                    const newVisibleCards = Math.floor(document.querySelector('.destinations-carousel').offsetWidth / cardWidth);
                    const newMaxPosition = -(cards.length - newVisibleCards) * cardWidth;
                    
                    if (currentPosition < newMaxPosition) {
                        currentPosition = newMaxPosition;
                        track.style.transform = `translateX(${currentPosition}px)`;
                    }
                    
                    updateArrows();
                });
            }

            // Navbar scroll effect
            window.addEventListener('scroll', function() {
                document.querySelector('.navbar').classList.toggle('scrolled', window.scrollY > 100);
            });
        });
    </script>
{% endblock %}