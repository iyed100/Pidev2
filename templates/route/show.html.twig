{% extends 'base.html.twig' %}

{% block title %}Route Details{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h1>Route: {{ route.depart }} â†’ {{ route.arrivee }}</h1>
                
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Route Information</h5>
                        <table class="table">
                            <tr>
                                <th>Distance:</th>
                                <td>{{ route.distance }} km</td>
                            </tr>
                            <tr>
                                <th>Duration:</th>
                                <td>{{ route.duree }} minutes</td>
                            </tr>
                            <tr>
                                <th>Transport Type:</th>
                                <td>
                                    <a href="{{ path('app_transport_means_show', {'id': route.transport.id}) }}">
                                        {{ route.transport.type }}
                                    </a>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Actions</h5>
                        <div class="d-grid gap-2">
                            <a href="{{ path('app_route_edit', {'id': route.id}) }}" class="btn btn-warning">Edit</a>
                            <form method="post" action="{{ path('app_route_delete', {'id': route.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ route.id) }}">
                                <button class="btn btn-danger w-100" onclick="return confirm('Are you sure you want to delete this route?')">Delete</button>
                            </form>
                            <a href="{{ path('app_route_index') }}" class="btn btn-secondary">Back to list</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 