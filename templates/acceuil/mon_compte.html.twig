{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <style>
        :root {
            --primary-color: #6a11cb;
            --secondary-color: #2575fc;
        }

        .hero-section {
            background: url('/images/background.jpg') center/cover no-repeat;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
            position: relative;
        }

        .navbar {
            background: rgba(0, 0, 0, 0.5) !important;
        }

        .navbar a {
            color: white !important;
            font-weight: 500;
        }

        .hero-text h1 {
            font-size: 3.5rem;
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            margin-bottom: 1rem;
        }

        .hero-text p {
            font-size: 1.5rem;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
        }

        .booking-form {
            background: rgba(255, 255, 255, 0.95);
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            width: 90%;
            max-width: 1200px;
        }

        .form-select-lg, .form-control-lg {
            padding: 12px 15px;
            font-size: 1rem;
            border: 1px solid #e0e0e0;
        }

        .form-label {
            margin-bottom: 8px;
            display: block;
            color: #555;
        }

        .btn-lg {
            padding: 12px;
            font-size: 1.1rem;
            font-weight: 600;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Hero Section avec navbar -->
    <header class="hero-section">
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="{{ asset('images/logo.png') }}" alt="Logo" width="50" height="50">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Hébergement</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Espace de coworking</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Événements</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Avis et réclamation</a></li>
                    </ul>

                    {% if user %}
                        <span class="navbar-text text-white me-3">
                            Bonjour, {{ user.nom }} {{ user.prenom }}
                        </span>
                        <a href="{{ path('app_mon_compte') }}" class="btn btn-outline-light me-2">Mon compte</a>
                        <a href="{{ path('app_logout') }}" class="btn btn-danger">Déconnexion</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-outline-light me-2">Connexion</a>
                        <a href="{{ path('app_register') }}" class="btn btn-danger">Inscription</a>
                    {% endif %}
                </div>
            </div>
        </nav>

        <div class="hero-text container">
            <h1 class="animate__animated animate__fadeInDown">Bienvenue sur votre compte personnel</h1>
            <p class="animate__animated animate__fadeInUp animate__delay-1s">Vous pouvez modifier vos informations ci-dessous</p>
        </div>

        <div class="booking-form animate__animated animate__fadeInUp animate__delay-2s">
            <form class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-bold">Destination</label>
                    <select class="form-select form-select-lg">
                        <option selected disabled>Choisissez une destination</option>
                        <option>Dubai</option>
                        <option>Paris</option>
                        <option>New York</option>
                        <option>Lisbonne</option>
                        <option>Rome</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label fw-bold">Personnes</label>
                    <input type="number" class="form-control form-control-lg" value="2" min="1">
                </div>

                <div class="col-md-2">
                    <label class="form-label fw-bold">Arrivée</label>
                    <input type="date" class="form-control form-control-lg">
                </div>

                <div class="col-md-2">
                    <label class="form-label fw-bold">Départ</label>
                    <input type="date" class="form-control form-control-lg">
                </div>

                <div class="col-md-2">
                    <button class="btn btn-danger btn-lg w-100 py-2">
                        <i class="fas fa-search me-2"></i> Rechercher
                    </button>
                </div>
            </form>
        </div>
    </header>

    <!-- Section Mon Compte -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="mb-4">Mon Compte</h2>

            <form method="POST" action="{{ path('app_update_user') }}">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="nom" class="form-label">Nom</label>
                        <input type="text" class="form-control" id="nom" name="nom" value="{{ user.nom }}" required>
                    </div>

                    <div class="col-md-6">
                        <label for="prenom" class="form-label">Prénom</label>
                        <input type="text" class="form-control" id="prenom" name="prenom" value="{{ user.prenom }}" required>
                    </div>

                    <div class="col-md-6">
                        <label for="age" class="form-label">Âge</label>
                        <input type="number" class="form-control" id="age" name="age" value="{{ user.age }}" required>
                    </div>

                    <div class="col-md-6">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" value="{{ user.email }}" required>
                    </div>

                    <div class="col-md-6">
                        <label for="password" class="form-label">Nouveau mot de passe</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Laisser vide si inchangé">
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Mettre à jour</button>

                    <form method="POST" action="{{ path('app_delete_user') }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.');">
                        <button type="submit" class="btn btn-outline-danger">Supprimer mon compte</button>
                    </form>
                </div>
            </form>
        </div>
    </section>
{% endblock %}
