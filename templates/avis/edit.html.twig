{% extends 'base.html.twig' %}

{% block title %}New Review{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h1 class="h4 mb-0">Edit Review</h1>
                </div>
                
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    
                    <div class="mb-3">
                        {{ form_label(form.comment, 'Your Review', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.comment, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                        <div class="invalid-feedback">
                            Please provide your review.
                        </div>
                    </div>
                    
                   
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-primary me-md-2">
                            <i class="fas fa-save me-1"></i> {{ button_label|default('Save Review') }}
                        </button>
                        <a href="{{ path('avis_index') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Back to list
                        </a>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .rating-input {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
    }
    .rating-input input {
        display: none;
    }
    .rating-input label {
        font-size: 2rem;
        color: #ddd;
        cursor: pointer;
        padding: 0 0.2rem;
    }
    .rating-input input:checked ~ label,
    .rating-input input:hover ~ label {
        color: #ffc107;
    }
    .rating-input label:hover,
    .rating-input label:hover ~ label {
        color: #ffc107;
    }
</style>
{% endblock %}