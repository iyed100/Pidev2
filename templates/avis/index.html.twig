{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Toggle form visibility
            const toggleForm = document.getElementById('toggleForm');
            const avisForm = document.getElementById('avisForm');
            const cancelForm = document.getElementById('cancelForm');
            
            toggleForm.addEventListener('click', function() {
                avisForm.classList.toggle('show');
            });
            
            cancelForm.addEventListener('click', function() {
                avisForm.classList.remove('show');
            });
            
            // STAR RATING FUNCTIONALITY - REPLACE THIS SECTION
            const stars = document.querySelectorAll('.star-rating i');
            const noteInput = document.querySelector('#avis_note');
            
            if (stars && noteInput) {
                // Initialize with empty value
                noteInput.value = '';
                
                stars.forEach(star => {
                    star.addEventListener('click', function() {
                        const value = this.getAttribute('data-value');
                        noteInput.value = value;
                        
                        // Update star display
                        stars.forEach((s, index) => {
                            if (index < 5 - value + 1) {
                                s.classList.add('fas');
                                s.classList.remove('far');
                            } else {
                                s.classList.add('far');
                                s.classList.remove('fas');
                            }
                        });
                    });
                });
            }
            
            // Check if we're in edit mode and show form
            {% if editMode|default(false) %}
                avisForm.classList.add('show');
                // Scroll to form
                avisForm.scrollIntoView({ behavior: 'smooth' });
            {% endif %}
            
            // Navbar scroll effect
            window.addEventListener('scroll', function() {
                document.querySelector('.navbar').classList.toggle('scrolled', window.scrollY > 100);
            });
        });
    </script>

   
