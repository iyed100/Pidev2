{% extends 'base.html.twig' %}

{% block title %}Vehicle Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .detail-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .detail-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            overflow: hidden;
            margin-bottom: 2rem;
        }

        .vehicle-header {
            background: linear-gradient(to right, #f8f9fa, #e9ecef);
            padding: 2rem;
            border-radius: 15px;
            margin-bottom: 2rem;
        }

        .vehicle-title {
            color: #2c3e50;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .vehicle-title i {
            font-size: 2rem;
            color: #2575fc;
        }

        .info-table {
            width: 100%;
        }

        .info-table th {
            color: #6c757d;
            font-weight: 500;
            padding: 1rem;
            width: 30%;
        }

        .info-table td {
            color: #2c3e50;
            padding: 1rem;
        }

        .info-table tr:not(:last-child) {
            border-bottom: 1px solid #f8f9fa;
        }

        .routes-table {
            width: 100%;
            margin-top: 1rem;
        }

        .routes-table th {
            background: #f8f9fa;
            color: #2c3e50;
            font-weight: 500;
            padding: 1rem;
        }

        .routes-table td {
            padding: 1rem;
            color: #6c757d;
        }

        .routes-table tr:not(:last-child) {
            border-bottom: 1px solid #f8f9fa;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            border-radius: 25px;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn:hover {
            transform: translateY(-2px);
        }

        .btn-edit {
            background: linear-gradient(to right, #f6d365, #fda085);
            border: none;
            color: white;
        }

        .btn-delete {
            background: linear-gradient(to right, #ff6b6b, #ee5253);
            border: none;
            color: white;
        }

        .btn-back {
            background: #f8f9fa;
            border: 1px solid #e9ecef;
            color: #2c3e50;
        }

        .action-buttons {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

        .image-container {
            width: 100%;
            height: 300px;
            overflow: hidden;
            border-radius: 15px;
            margin-bottom: 2rem;
        }

        .vehicle-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .section-title {
            color: #2c3e50;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #f8f9fa;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="detail-container">
        <div class="vehicle-header">
            <h1 class="vehicle-title">
                <i class="bi bi-{{ transport_mean.type == 'bus' ? 'bus-front' : 
                    transport_mean.type == 'train' ? 'train-front' :
                    transport_mean.type == 'metro' ? 'train' :
                    transport_mean.type == 'taxi' ? 'taxi-front' : 'bicycle' }}"></i>
                {{ transport_mean.nom }}
            </h1>
        </div>

        <div class="row">
            <div class="col-lg-8">
                {% if transport_mean.image %}
                    <div class="image-container">
                        <img src="{{ transport_mean.image }}" alt="{{ transport_mean.nom }}" class="vehicle-image">
                    </div>
                {% endif %}

                <div class="detail-card">
                    <div class="card-body">
                        <h3 class="section-title">Vehicle Information</h3>
                        <table class="info-table">
                            <tr>
                                <th>Name</th>
                                <td>{{ transport_mean.nom }}</td>
                            </tr>
                            <tr>
                                <th>Type</th>
                                <td>
                                    <i class="bi bi-{{ transport_mean.type == 'bus' ? 'bus-front' : 
                                        transport_mean.type == 'train' ? 'train-front' :
                                        transport_mean.type == 'metro' ? 'train' :
                                        transport_mean.type == 'taxi' ? 'taxi-front' : 'bicycle' }} me-2"></i>
                                    {{ transport_mean.type|capitalize }}
                                </td>
                            </tr>
                            <tr>
                                <th>Capacity</th>
                                <td>{{ transport_mean.capacite }} passengers</td>
                            </tr>
                            <tr>
                                <th>Price</th>
                                <td>{{ transport_mean.prix|number_format(2, '.', ',') }} â‚¬</td>
                            </tr>
                            <tr>
                                <th>Departure Date</th>
                                <td>{{ transport_mean.dateDepart }}</td>
                            </tr>
                        </table>
                    </div>
                </div>

                {% if transport_mean.routes|length > 0 %}
                    <div class="detail-card">
                        <div class="card-body">
                            <h3 class="section-title">Associated Routes</h3>
                            <div class="table-responsive">
                                <table class="routes-table">
                                    <thead>
                                        <tr>
                                            <th>From</th>
                                            <th>To</th>
                                            <th>Distance</th>
                                            <th>Duration</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for route in transport_mean.routes %}
                                            <tr>
                                                <td>{{ route.depart }}</td>
                                                <td>{{ route.arrivee }}</td>
                                                <td>{{ route.distance }} km</td>
                                                <td>{{ route.duree }} min</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>

            <div class="col-lg-4">
                <div class="detail-card">
                    <div class="card-body">
                        <h3 class="section-title">Actions</h3>
                        <div class="action-buttons">
                            <a href="{{ path('app_transport_means_edit', {'id': transport_mean.id}) }}" 
                               class="btn btn-edit w-100">
                                <i class="bi bi-pencil"></i> Edit Vehicle
                            </a>
                        </div>
                        <div class="action-buttons">
                            <form method="post" action="{{ path('app_transport_means_delete', {'id': transport_mean.id}) }}" 
                                  onsubmit="return confirm('Are you sure you want to delete this vehicle?');" 
                                  class="w-100">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ transport_mean.id) }}">
                                <button class="btn btn-delete w-100">
                                    <i class="bi bi-trash"></i> Delete Vehicle
                                </button>
                            </form>
                        </div>
                        <div class="action-buttons">
                            <a href="{{ path('app_transport_means_index') }}" class="btn btn-back w-100">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 