{% extends 'base.html.twig' %}

{% block title %}New Transport Mean{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <style>
        .form-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        }

        .page-title {
            color: #2c3e50;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #f8f9fa;
        }

        .form-label {
            font-weight: 500;
            color: #2c3e50;
            margin-bottom: 0.5rem;
        }

        .form-control, .form-select {
            border: 1px solid #e9ecef;
            border-radius: 8px;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
            border-color: #2575fc;
            box-shadow: 0 0 0 0.2rem rgba(37, 117, 252, 0.1);
        }

        .btn {
            padding: 0.75rem 1.5rem;
            border-radius: 25px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background: linear-gradient(to right, #6a11cb, #2575fc);
            border: none;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(106, 17, 203, 0.4);
        }

        .btn-light {
            background: #f8f9fa;
            border: 1px solid #e9ecef;
        }

        .btn-light:hover {
            background: #e9ecef;
            transform: translateY(-2px);
        }

        .form-text {
            color: #6c757d;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .invalid-feedback {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .datepicker {
            z-index: 1060 !important;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="section-header mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_transport_means_index') }}">Transport Means</a></li>
                <li class="breadcrumb-item active" aria-current="page">New Transport</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card section-card">
                <div class="card-body">
                    <h1 class="h2 mb-4">Add New Transport</h1>

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.nom) }}
                                    {{ form_widget(form.nom) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.nom) }}
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.type) }}
                                    {{ form_widget(form.type) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.type) }}
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.capacite) }}
                                    {{ form_widget(form.capacite) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.capacite) }}
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.prix) }}
                                    {{ form_widget(form.prix) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.prix) }}
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.dateDepart) }}
                                    {{ form_widget(form.dateDepart, {
                                        'attr': {
                                            'class': 'form-control js-datepicker',
                                            'placeholder': 'dd/mm/yyyy',
                                            'autocomplete': 'off'
                                        }
                                    }) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.dateDepart) }}
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.imageFile) }}
                                    {{ form_widget(form.imageFile) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.imageFile) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary-gradient btn-action">
                                <i class="bi bi-plus-circle"></i> Create Transport
                            </button>
                            <a href="{{ path('app_transport_means_index') }}" class="btn btn-light btn-action">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card section-card">
                <div class="card-body">
                    <h5 class="card-title mb-4">Quick Actions</h5>
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_transport_means_index') }}" class="btn btn-light btn-action">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/locales/bootstrap-datepicker.fr.min.js"></script>
    <script>
        // Form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()

        // Initialize datepicker
        $(document).ready(function() {
            $('.js-datepicker').datepicker({
                format: 'dd/mm/yyyy',
                autoclose: true,
                todayHighlight: true,
                language: 'fr',
                startDate: new Date(),
                clearBtn: true,
                orientation: 'bottom auto'
            }).on('changeDate', function(e) {
                // Trigger form validation when date changes
                $(this).trigger('input');
            });
        });
    </script>
{% endblock %} 