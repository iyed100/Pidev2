{% extends 'base.html.twig' %}

{% block title %}Edit {{ transport_mean.nom }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <style>
        .datepicker {
            z-index: 1060 !important;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="section-header mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_transport_means_index') }}">Transport Means</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_transport_means_show', {'id': transport_mean.id}) }}">{{ transport_mean.nom }}</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card section-card">
                <div class="card-body">
                    <h1 class="h2 mb-4">Edit Transport Mean</h1>

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.nom) }}
                                    {{ form_widget(form.nom) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.nom) }}
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.type) }}
                                    {{ form_widget(form.type) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.type) }}
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.capacite) }}
                                    {{ form_widget(form.capacite) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.capacite) }}
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.prix) }}
                                    {{ form_widget(form.prix) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.prix) }}
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.dateDepart) }}
                                    {{ form_widget(form.dateDepart, {
                                        'attr': {
                                            'class': 'form-control js-datepicker',
                                            'placeholder': 'dd/mm/yyyy',
                                            'autocomplete': 'off'
                                        }
                                    }) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.dateDepart) }}
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.imageFile) }}
                                    {{ form_widget(form.imageFile) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.imageFile) }}
                                    </div>
                                    {% if transport_mean.image %}
                                        <div class="mt-2">
                                            <small class="text-muted">Current image:</small><br>
                                            <img src="{{ asset('uploads/transport_means/' ~ transport_mean.image) }}" alt="Current image" class="img-thumbnail mt-2" style="max-height: 100px">
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary-gradient btn-action">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                            <a href="{{ path('app_transport_means_show', {'id': transport_mean.id}) }}" class="btn btn-light btn-action">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card section-card">
                <div class="card-body">
                    <h5 class="card-title mb-4">Quick Actions</h5>
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_transport_means_show', {'id': transport_mean.id}) }}" class="btn btn-secondary-gradient btn-action">
                            <i class="bi bi-eye"></i> View Transport
                        </a>
                        <a href="{{ path('app_transport_means_index') }}" class="btn btn-light btn-action">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/locales/bootstrap-datepicker.fr.min.js"></script>
    <script>
        // Form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()

        // Initialize datepicker
        $(document).ready(function() {
            $('.js-datepicker').datepicker({
                format: 'dd/mm/yyyy',
                autoclose: true,
                todayHighlight: true,
                language: 'fr',
                startDate: new Date(),
                clearBtn: true,
                orientation: 'bottom auto'
            }).on('changeDate', function(e) {
                // Trigger form validation when date changes
                $(this).trigger('input');
            });
        });
    </script>
{% endblock %} 