{% extends 'base.html.twig' %}

{% block title %}Coworking Spaces{% endblock %}

{% block body %}
    <div class="section-header">
        <div class="d-flex justify-content-between align-items-center">
            <h1><i class="bi bi-briefcase"></i> Coworking Spaces</h1>
            <a href="{{ path('app_coworking_space_new') }}" class="btn btn-light btn-custom">
                <i class="bi bi-plus-circle"></i> New Space
            </a>
        </div>
    </div>

    <div class="row">
        {% for space in coworking_spaces %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card coworking-card h-100">
                    {% if space.image %}
                        <img src="{{ space.image }}" class="card-img-top" alt="{{ space.nom }}" style="height: 200px; object-fit: cover;">
                    {% endif %}
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="card-title">{{ space.nom }}</h5>
                            <span class="badge bg-light text-dark">
                                <i class="bi bi-building"></i> {{ space.hotel.nom }}
                            </span>
                        </div>
                        <p class="card-text">
                            <i class="bi bi-geo-alt"></i> {{ space.adresse }}
                        </p>
                        <div class="mb-3">
                            <p class="mb-1"><i class="bi bi-currency-dollar"></i> Price per hour: ${{ space.prixParHeure }}</p>
                            <p class="mb-1"><i class="bi bi-star"></i> Hotel Rating: 
                                {% for i in 1..space.hotel.nombreEtoiles %}
                                    <i class="bi bi-star-fill text-warning"></i>
                                {% endfor %}
                            </p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_coworking_space_show', {'id': space.id}) }}" class="btn btn-light btn-sm">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a href="{{ path('app_coworking_space_edit', {'id': space.id}) }}" class="btn btn-light btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <form method="post" action="{{ path('app_coworking_space_delete', {'id': space.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ space.id) }}">
                                <button class="btn btn-light btn-sm" onclick="return confirm('Are you sure you want to delete this space?')">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No coworking spaces found. Add your first space to get started!
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %} 