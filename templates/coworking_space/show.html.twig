{% extends 'base.html.twig' %}

{% block title %}Coworking Space Details{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h1>{{ coworking_space.nom }}</h1>
                
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Space Information</h5>
                        <table class="table">
                            <tr>
                                <th>Address:</th>
                                <td>{{ coworking_space.adresse }}</td>
                            </tr>
                            <tr>
                                <th>Capacity:</th>
                                <td>{{ coworking_space.capacite }} people</td>
                            </tr>
                            <tr>
                                <th>Price per Hour:</th>
                                <td>{{ coworking_space.prixParHeure|number_format(2, '.', ',') }} â‚¬</td>
                            </tr>
                            {% if coworking_space.hotel %}
                            <tr>
                                <th>Associated Hotel:</th>
                                <td>
                                    <a href="{{ path('app_hotel_show', {'id': coworking_space.hotel.id}) }}">
                                        {{ coworking_space.hotel.nom }}
                                    </a>
                                </td>
                            </tr>
                            {% endif %}
                        </table>
                    </div>
                </div>

                {% if coworking_space.image %}
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Space Image</h5>
                        <img src="{{ coworking_space.image }}" alt="{{ coworking_space.nom }}" class="img-fluid rounded">
                    </div>
                </div>
                {% endif %}
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Actions</h5>
                        <div class="d-grid gap-2">
                            <a href="{{ path('app_coworking_space_edit', {'id': coworking_space.id}) }}" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <form method="post" action="{{ path('app_coworking_space_delete', {'id': coworking_space.id}) }}" onsubmit="return confirm('Are you sure you want to delete this space?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ coworking_space.id) }}">
                                <button class="btn btn-danger w-100">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                            <a href="{{ path('app_coworking_space_index') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to list
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 