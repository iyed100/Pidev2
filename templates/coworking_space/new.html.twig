{% extends 'base.html.twig' %}

{% block title %}New Coworking Space{% endblock %}

{% block body %}
    <div class="container">
        <h1>Create New Coworking Space</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_label(form.nom, 'Name', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom) }}
                </div>

                <div class="col-md-6 mb-3">
                    {{ form_label(form.adresse, 'Address', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.adresse) }}
                </div>

                <div class="col-md-6 mb-3">
                    {{ form_label(form.prixParHeure, 'Price per Hour', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.prixParHeure, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.prixParHeure) }}
                </div>

                <div class="col-md-6 mb-3">
                    {{ form_label(form.image, 'Image URL', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.image) }}
                </div>

                <div class="col-12 mb-3">
                    {{ form_label(form.hotel, 'Associated Hotel', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.hotel, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.hotel) }}
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Create</button>
                <a href="{{ path('app_coworking_space_index') }}" class="btn btn-secondary">Back to list</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %} 